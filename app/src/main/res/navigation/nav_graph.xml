<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.sap.codelab.home.presentation.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_homeFragment_to_createMemoFragment"
            app:destination="@id/createMemoFragment" />
        <action
            android:id="@+id/action_homeFragment_to_viewMemoFragment"
            app:destination="@id/viewMemoFragment" />
    </fragment>

    <fragment
        android:id="@+id/createMemoFragment"
        android:name="com.sap.codelab.create.presentation.CreateMemoFragment"
        android:label="@string/new_memo" />

    <fragment
        android:id="@+id/viewMemoFragment"
        android:name="com.sap.codelab.detail.presentation.ViewMemoFragment"
        android:label="@string/app_name">
        <argument
            android:name="memoId"
            app:argType="long" />
    </fragment>

</navigation>