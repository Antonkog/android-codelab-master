<resources>

    <!-- App theme based on Material Components for consistent AppBar/Toolbar styling -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Brand colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Ensure contrast for top app bar: white content on primary background -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>

        <!-- Toolbar/Menu text and icon tints derive from Material attributes; keep popup menus dark-on-dark corrected -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <!-- Default icon tint for toolbar/menu icons -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <!-- Toolbar widget style to use MaterialToolbar defaults; title text color inherits colorOnPrimary -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="MemoTitle" parent="MemoText">
        <item name="android:textSize">20sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MemoText" parent="@android:style/TextAppearance.Material.Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">3</item>
    </style>

</resources>
